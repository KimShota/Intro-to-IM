int lightSensor = A0; //sensor 

int leftValue = 0;
int rightValue = 0;

void setup() {
  Serial.begin(9600);
  pinMode(lightSensor, INPUT);
}

void loop() {
  //read the light sensor ranging from 0 to 1023
  int rVal = analogRead(lightSensor);

  //send the sensor value to my computer 
  Serial.print(rVal);
  //add a comma space 
  Serial.print(",");
  //prints 0 with a newline 
  Serial.println(0);

  //if there is any data waiting in the serial buffer 
  if (Serial.available()) {
    //store the string into the msg until the newline 
    String msg = Serial.readStringUntil('\n');
    //remove whitespace characters
    msg.trim();

    //store the position of the comma 
    int commaIndex = msg.indexOf(',');
    //
    if (commaIndex > 0) {
      //convert the part before the comma into integer 
      leftValue  = msg.substring(0, commaIndex).toInt();
      //convert the part after the comma into integer 
      rightValue = msg.substring(commaIndex + 1).toInt();
    }
  }

  //delay the program for 20 ms 
  delay(20);
}
